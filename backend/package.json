  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.2",
    "@types/joi": "^17.2.3",
    "@types/nodemailer": "^6.4.9",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/node-cron": "^3.0.8",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/node-schedule": "^2.1.0",
    "@types/moment": "^2.13.0",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3",
    "ts-jest": "^29.1.1",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
