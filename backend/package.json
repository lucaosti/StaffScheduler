{
  "name": "staff-scheduler-backend",
  "version": "1.0.0",
  "description": "Backend API for Staff Scheduler - Advanced Workforce Management System",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "demo:install": "npx ts-node scripts/demo-data.ts install",
    "demo:remove": "npx ts-node scripts/demo-data.ts remove",
    "demo:report": "npx ts-node scripts/demo-data.ts report",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-mysql-session": "^3.0.0",
    "mysql2": "^3.6.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "nodemailer": "^6.9.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^22.0.0",
    "exceljs": "^4.3.0",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "express-rate-limit": "^6.8.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "node-schedule": "^2.1.1",
    "moment": "^2.29.4",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0"
