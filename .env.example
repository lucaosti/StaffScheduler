# =======================================================
# Staff Scheduler Environment Configuration
# =======================================================
# Copy this file to .env and customize the values below
# IMPORTANT: Change all default values in production!

# =======================================================
# DATABASE CONFIGURATION
# =======================================================
MYSQL_ROOT_PASSWORD=StrongRootPassword123!
MYSQL_DATABASE=staff_scheduler
MYSQL_USER=scheduler_user
MYSQL_PASSWORD=scheduler_password

# Backend database connection
DB_HOST=mysql
DB_PORT=3306
DB_NAME=staff_scheduler
DB_USER=scheduler_user
DB_PASSWORD=scheduler_password

# =======================================================
# AUTHENTICATION & SECURITY
# =======================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-super-secret-session-key-change-in-production-make-it-very-long-and-random
BCRYPT_SALT_ROUNDS=12

# =======================================================
# APPLICATION CONFIGURATION
# =======================================================
NODE_ENV=production
PORT=3001
DEBUG=false
LOG_LEVEL=info

# Application ports
BACKEND_PORT=3001
FRONTEND_PORT=3000
PHPMYADMIN_PORT=8080

# =======================================================
# FRONTEND CONFIGURATION
# =======================================================
REACT_APP_API_URL=http://localhost:3001
REACT_APP_APP_NAME=Staff Scheduler

# =======================================================
# CORS CONFIGURATION
# =======================================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =======================================================
# OPTIMIZATION ENGINE
# =======================================================
OPTIMIZATION_ENGINE=javascript
OPTIMIZATION_TIMEOUT=300000
OPTIMIZATION_MAX_ITERATIONS=10000

# =======================================================
# RATE LIMITING
# =======================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =======================================================
# LOGGING CONFIGURATION
# =======================================================
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =======================================================
# EMAIL CONFIGURATION (Optional)
# =======================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM_NAME=Staff Scheduler
EMAIL_FROM_ADDRESS=noreply@staffscheduler.com

# =======================================================
# NOTIFICATIONS (Optional)
# =======================================================
NOTIFICATIONS_ENABLED=true
EMAIL_NOTIFICATIONS_ENABLED=true
IN_APP_NOTIFICATIONS_ENABLED=true

# =======================================================
# FILE UPLOAD SETTINGS
# =======================================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# =======================================================
# REPORT SETTINGS
# =======================================================
REPORT_STORAGE_PATH=./reports
REPORT_CLEANUP_DAYS=30

# =======================================================
# REDIS CONFIGURATION (Optional - for caching)
# =======================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =======================================================
# DEMO DATA SETTINGS
# =======================================================
# Demo accounts are automatically created in database initialization
# Credentials: See documentation for current demo account details

# =======================================================
# SECURITY NOTES:
# =======================================================
# 1. Change ALL default passwords and secrets in production
# 2. Use strong, randomly generated secrets (256-bit minimum)
# 3. Consider using a secrets management system
# 4. Never commit the actual .env file to version control
# 5. Demo accounts should be disabled/removed in production
