# =======================================================
# StaffScheduler Environment Configuration
# =======================================================
# Copy this file to .env and customize the values below

# =======================================================
# DATABASE CONFIGURATION
# =======================================================
MYSQL_ROOT_PASSWORD=staffscheduler_root_2024
MYSQL_DATABASE=staff_scheduler
MYSQL_USER=staffscheduler
MYSQL_PASSWORD=staffscheduler_pass_2024

# Database connection for backend
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=staff_scheduler
DB_USER=staffscheduler
DB_PASSWORD=staffscheduler_pass_2024

# =======================================================
# JWT & AUTHENTICATION
# =======================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_EXPIRES_IN=24h

# =======================================================
# SESSION MANAGEMENT
# =======================================================
SESSION_SECRET=your-super-secret-session-key-change-in-production-make-it-very-long-and-random

# =======================================================
# APPLICATION CONFIGURATION
# =======================================================
NODE_ENV=development
PORT=5000
REACT_APP_API_URL=http://localhost:5000/api

# =======================================================
# EMAIL CONFIGURATION (Optional)
# =======================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =======================================================
# OPTIMIZATION ENGINE (Optional)
# =======================================================
OPTIMIZATION_ENGINE=or-tools

# =======================================================
# CORS CONFIGURATION
# =======================================================
CORS_ORIGIN=http://localhost:3000

# =======================================================
# DEMO DATA SETTINGS
# =======================================================
# Set to true to automatically install demo data on first run
AUTO_INSTALL_DEMO=false

# =======================================================
# BACKUP CONFIGURATION (Optional)
# =======================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30

# =======================================================
# LOGGING CONFIGURATION
# =======================================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true

# =======================================================
# REDIS CONFIGURATION (Optional - for production)
# =======================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =======================================================
# NOTIFICATIONS (Optional)
# =======================================================
FCM_SERVER_KEY=your-firebase-server-key
PUSH_NOTIFICATIONS_ENABLED=false

# =======================================================
# SECURITY SETTINGS
# =======================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# =======================================================
# DEVELOPMENT SETTINGS
# =======================================================
# Set to true in development to enable detailed error messages
DEBUG=false
DEV_MODE=false

# =======================================================
# IMPORTANT SECURITY NOTES:
# =======================================================
# 1. Change all default passwords and secrets in production
# 2. Use strong, randomly generated secrets for JWT and sessions
# 3. Consider using environment-specific .env files (.env.production, .env.development)
# 4. Never commit the actual .env file to version control
# 5. Use a secrets management system in production environments
