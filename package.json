{
  "name": "staff-scheduler",
  "version": "1.0.0",
  "description": "Advanced Workforce Management System with N-Level Hierarchical Management",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "install:all": "cd frontend && npm install && cd ../backend && npm install",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "clean": "rm -rf frontend/node_modules backend/node_modules frontend/build backend/dist",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "demo:install": "cd backend && npm run demo:install",
    "demo:remove": "cd backend && npm run demo:remove",
    "demo:report": "cd backend && npm run demo:report",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build --no-cache",
    "docker:restart": "docker-compose restart",
    "status": "echo '✅ Checking project status...' && npm run build && echo '✅ Build successful! Project is ready.'"
  },
  "keywords": [
    "workforce-management",
    "scheduling",
    "optimization",
    "healthcare",
    "react",
    "typescript",
    "nodejs",
    "mysql"
  ],
  "author": "Staff Scheduler Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
